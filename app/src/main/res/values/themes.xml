<resources>
    <!-- Base application theme. -->
    <style name="Theme.Aop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="fontFamily">@font/sf_pro_display_semi_bold</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Aop.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Aop.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Aop.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="text.toolbar">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/size_l</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.small">
        <item name="android:textSize">@dimen/size_s</item>
    </style>

    <style name="text.large">
        <item name="android:textSize">@dimen/size_xxxxl</item>
    </style>

    <style name="toggleIcon">
        <item name="android:textOff">@null</item>
        <item name="android:textOn">@null</item>
    </style>

    <style name="button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="cornerRadius">@dimen/button_radius</item>
    </style>
</resources>